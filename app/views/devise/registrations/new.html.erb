<div class="row">
  <div class="col m6 offset-m3 center">
    
    <h5>会員登録（無料）</h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <p class="input_title">◼︎お名前</p>
        <%= f.text_field :name, autofocus: true, :class => "validate", :placeholder => "お名前" %>
      </div>

      <div class="input-field">
      　<p class="input_title">◼︎メールアドレス</p>
        <%= f.email_field :email, :class => "validate", :placeholder => "メールアドレス" %>
      </div>

      <div class="input-field">
      <p class="input_title">◼︎パスワード</p>
        <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "パスワード（英数字8文字以上）" %>
      </div>
　　　<p class="center-align">個人情報保護方針</p>
      <button class="btn waves-effect black" type="submit" name="action">規約に同意して申込む</button>
    <% end %>

    <p class="center-align">または連携アカウントでログイン</p>
     <%= link_to "Googleでログイン", user_omniauth_authorize_path(:google_oauth2), class: "btn red darken-1 z-depth-0" %>
    <%= link_to "Facebookでログイン", user_omniauth_authorize_path(:facebook), class: "btn blue darken-4 z-depth-0" %>
    <br/><br/>
    ※既に会員の方は<a href="">こちら</a>
  </div>
</div>